@model CreateAccount

@{
    ViewData["Title"] = "Account Create";
}

<div class="jumbotron">

<form class="form-horizontal" asp-action="Validation" method="POST">
<fieldset>

<legend class="lead" style="font-size:30pt; padding-left:1.3%">Create an account</legend>

<div class="form-group">
    <div class="col-md-4">
    <input class="form-control" asp-for="EmailAddress" type="text" placeholder="Email Address">
    <small id="emailHelp" class="form-text text-muted" style="padding-left:1.3%">Enter an email address</small>
    </div>
</div>

<div class="form-group">
    <div class="col-md-4">
    <input class="form-control" asp-for="Password" type="password" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted" style="padding-left:1.3%">Passwords must be at least 8 characters and use a mix of upper and lower case letters</small>
    </div>
</div>

<div class="form-group">
  <div class="col-md-4-4" style="padding-left:1.3%">
    <button class="btn btn-primary" type="submit">Make Account</button>
  </div>
</div>

</fieldset>
</form>
</div>